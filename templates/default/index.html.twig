{% block body %}

    <div class="bg" style="background-image:url('{{ asset('images/background 2.png') }}') ;">

        <div class="container">
            {% if app.user %}
            <div class="mx-auto col-md-7">
                <div class="mx-auto">
                    <img src="{{ asset('images/logo.png') }}" alt="logo ">
                </div>
                <div class="rox mx-auto col-md-6 ">
                <h2 class="justify-content-center ">Bienvenue {{ app.user.fullname }}</h2>
                </div>
            </div>
            {% else %}
            <div class="justify-content-center">
                <div class="row justify-content-center"></div>
                <div class="m-5">
