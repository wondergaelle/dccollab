<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue sur DcCollad ! {% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {# lien vers bootswatch ==> template de base dupliqué sur toutes les pages (lien vers le css) #}
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
    {% endblock %}

</head>
<body>
<header class="page-header">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="{{ path('homepage') }}">DcCollab</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('projet_index') }}">Consulter les projets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('user_index', {'id': 'x'}) }}">Liste des utilisateurs</a>
                    </li>
                    <li class="nav-item">
                        {% if app.user %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('projet_new') }}">Créer un projet</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('profil') }}">
                            <i class="fa fa-user-circle"></i>
                            Mon profil
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('easyadmin') }}">Administration</a></li>
                    {% endif %}
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">
                            <i class="fa fa-sign-in"></i>
                            Me connecter
                        </a>
                        {% endif %}
                    </li>


                </ul>
                {#
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
                #}
            </div>
        </div>
    </nav>
</header>

<main>
    {% block body %}{% endblock %}
</main>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
    </body>
</html>
